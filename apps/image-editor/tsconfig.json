{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/js/*"],
      "@css/*": ["src/css/*"],
      "@svg/*": ["src/svg/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
